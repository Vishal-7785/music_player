                <input id="signin-button" type="submit" value="Sign-In">
                <div class="google-sign-up"> <a id="google" href=""> Sign Up with google</a> </div>
                <h3 id="statement">Don't have an account? <a id="sign-up" href="/users/sign-up">Sign up </a> here</h3>         
            </form>
            <form action="">
                <input id="guest-button" type="submit" value="Enter as a Guest">
            </form>
        </div>
